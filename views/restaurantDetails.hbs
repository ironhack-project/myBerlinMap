<h3 style="color:rgb(205, 126, 99); text-align:center; margin-top: 20px; text-decoration:underline"> {{restaurantDetails.name}} </h3>
<div class="container"> 
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" >
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-40 " src="{{restaurantDetails.images.[1].url}} " alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-40" src="{{restaurantDetails.images.[2].url}} " alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-40 " src="{{restaurantDetails.images.[3].url}}" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>




<div style="color:rgb(134, 148, 137);; font-size: 16px"> 
{{#unless user}}
<p>Phone number: {{restaurantDetails.phoneNumber}}</p>
<p>Address: 
    <a style="color:rgb(134, 148, 137);"> {{restaurantDetails.location.address.street}}</a>
    <a style="color:rgb(134, 148, 137);"> {{restaurantDetails.location.address.number}},</a>
    <a style="color:rgb(134, 148, 137);"> {{restaurantDetails.location.address.zipcode}}</a>
    <a style="color:rgb(134, 148, 137);"> {{restaurantDetails.location.address.city}}</a>
</p>
<p> In the beautiful district of {{restaurantDetails.location.address.district}}!</p>

<p>Currency: {{restaurantDetails.currency}}</p>
<p>Review score: {{restaurantDetails.reviewScore}}</p>

{{else}}
